    <div>      
         <a href="#" class="group relative block bg-black min-h-full  ">
          <img
            alt={service.title}
           src={service.image}  class="absolute inset-0 w-full object-cover opacity-75 transition-opacity group-hover:opacity-50  h-full "
          />

          <div class="relative p-4 sm:p-6 lg:p-8">
            <p class="text-sm font-bold uppercase tracking-widest text-lime-400">PV ENERGY</p>

            <p class="text-xl font-bold text-white sm:text-2xl">{service.title}</p>

            <div class="mt-36 ">
              <div
                class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
              >
                <p class="text-md text-white text-left font-bold">
                 {service.text}
          
                </p>
              </div>
            </div>
          </div>
        </a>
    </div>  ))
